<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/_head.ejs') %>
    <title>Add Accessory</title>
    
<body>
    <%- include('../partials/_header.ejs') %>
    <div class="container mt-5">
        <h1>Add New Accessory</h1>
        <form action="/admin/accessories/add" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price $</label>
                <input type="number" step="0.01" class="form-control" id="price" name="price" required>
            </div>
            <div class="mb-3">
                <label for="weight" class="form-label">Weight (kg)</label>
                <input type="number" step="0.01" class="form-control" id="weight" name="weight">
            </div>
            <div class="mb-3">
                <label for="applicableWindowSystems" class="form-label">Applicable Window Systems</label>
                <input type="text" class="form-control" id="applicableWindowSystems" name="applicableWindowSystems" required>
                <div id="windowSystemsHelp" class="form-text">Enter applicable window systems separated by commas.</div>
            </div>
            <button type="submit" class="btn btn-primary">Add Accessory</button>
        </form>
    </div>
    <%- include('../partials/_footer.ejs') %>
    <script src="/js/main.js"></script>
</body>
</html>