<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/_head.ejs') %>
    <title>Edit Accessory</title>
</head>
<body>
    <%- include('../partials/_header.ejs') %>
    <div class="container mt-5">
        <h1>Edit Accessory</h1>
        <form action="/admin/accessories/update/<%= accessory._id %>" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= accessory.name %>" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" step="0.01" class="form-control" id="price" name="price" value="<%= accessory.price %>" required>
            </div>
            <div class="mb-3">
                <label for="weight" class="form-label">Weight</label>
                <input type="number" step="0.01" class="form-control" id="weight" name="weight" value="<%= accessory.weight %>" required>
            </div>
            <div class="mb-3">
                <label for="applicableWindowSystems" class="form-label">Applicable Window Systems</label>
                <input type="text" class="form-control" id="applicableWindowSystems" name="applicableWindowSystems" value="<%= accessory.applicableWindowSystems.join(', ') %>" required>
                <div class="form-text">Enter window systems separated by commas.</div>
            </div>
            <button type="submit" class="btn btn-primary">Update Accessory</button>
        </form>
    </div>
    <%- include ('../partials/_footer.ejs') %>
    <script src="/js/main.js"></script>
</body>
</html>