<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/_head.ejs'); %>
    <title>Add Glass</title>
</head>
<body>
    <%- include('../partials/_header.ejs'); %>
    <div class="container mt-5">
        <h1>Add New Glass</h1>
        <form action="/admin/glasses/add" method="POST">
            <div class="mb-3">
                <label for="type" class="form-label">Type</label>
                <input type="text" class="form-control" id="type" name="type" required>
            </div>
            <div class="mb-3">
                <label for="color" class="form-label">Color</label>
                <input type="text" class="form-control" id="color" name="color" required>
            </div>
            <div class="mb-3">
                <label for="pricePerSquareMeter" class="form-label">Price per Square Meter $</label>
                <input type="number" step="0.01" class="form-control" id="pricePerSquareMeter" name="pricePerSquareMeter" required>
            </div>
            <div class="mb-3">
                <label for="weight" class="form-label">Weight (kg)</label>
                <input type="number" step="0.01" class="form-control" id="weight" name="weight" required>
            </div>
            <button type="submit" class="btn btn-primary">Add Glass</button>
        </form>
    </div>
    <%- include('../partials/_footer.ejs'); %>
    <script src="/js/main.js"></script>
</body>
</html>